{% extends 'base.html.twig' %}

{% block title %}Contactez-nous - Opulentia{% endblock %}

{% block body %}
<div class="container mt-5 pt-5 mb-5 fade-in">
    <div class="text-center mb-5">
        <h1 class="display-5 text-uppercase mb-3" style="letter-spacing: 3px;">Contactez-nous</h1>
        <p class="text-muted">Une question ? Un conseil ? Notre équipe est à votre écoute.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row g-5">
                <!-- Contact Info -->
                <div class="col-md-5 border-end border-light">
                    <div class="mb-5">
                        <h3 class="h6 text-uppercase mb-3 fw-bold" style="letter-spacing: 1px;">Service Client</h3>
                        <p class="text-muted mb-1">Du Lundi au Vendredi</p>
                        <p class="text-muted">9h00 - 18h00</p>
                    </div>

                    <div class="mb-5">
                        <h3 class="h6 text-uppercase mb-3 fw-bold" style="letter-spacing: 1px;">Nous trouver</h3>
                        <p class="text-muted mb-1">30-32 Avenue de la République</p>
                        <p class="text-muted">94800 Villejuif, France</p>
                    </div>

                    <div class="mb-5">
                        <h3 class="h6 text-uppercase mb-3 fw-bold" style="letter-spacing: 1px;">Nous écrire</h3>
                        <p class="text-muted mb-0"><a href="mailto:contact@opulentia.com" class="text-decoration-none text-muted hover-link">contact@opulentia.com</a></p>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="col-md-7 ps-md-5">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success rounded-0 border-0 bg-success bg-opacity-10 text-success mb-4">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        
                        <div class="mb-4">
                            {{ form_label(form.email, 'VOTRE EMAIL', {'label_attr': {'class': 'small text-muted text-uppercase mb-2'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control border-0 border-bottom rounded-0 px-0 bg-transparent shadow-none', 'placeholder': 'exemple@email.com'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.subject, 'SUJET', {'label_attr': {'class': 'small text-muted text-uppercase mb-2'}}) }}
                            {{ form_widget(form.subject, {'attr': {'class': 'form-control border-0 border-bottom rounded-0 px-0 bg-transparent shadow-none', 'placeholder': 'L\'objet de votre message'}}) }}
                            {{ form_errors(form.subject) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.message, 'MESSAGE', {'label_attr': {'class': 'small text-muted text-uppercase mb-2'}}) }}
                            {{ form_widget(form.message, {'attr': {'class': 'form-control border-0 border-bottom rounded-0 px-0 bg-transparent shadow-none', 'rows': '4', 'placeholder': 'Votre message...'}}) }}
                            {{ form_errors(form.message) }}
                        </div>

                        <div class="mb-5">
                            {{ form_label(form.captcha, 'SÉCURITÉ', {'label_attr': {'class': 'small text-muted text-uppercase mb-2'}}) }}
                            {{ form_widget(form.captcha, {'attr': {'class': 'form-control border-0 border-bottom rounded-0 px-0 bg-transparent shadow-none'}}) }}
                            {{ form_errors(form.captcha) }}
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-dark rounded-0 px-5 py-3 text-uppercase" style="letter-spacing: 1px;">Envoyer le message</button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
