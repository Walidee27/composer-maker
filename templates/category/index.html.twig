{% extends 'base.html.twig' %}

{% block title %}Catégories - Admin{% endblock %}

{% block body %}
<div class="container mt-5 pt-5 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-6 mb-0">LISTE DES CATÉGORIES</h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-dark">NOUVELLE CATÉGORIE</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th class="text-uppercase small py-3" style="letter-spacing: 1px;">ID</th>
                    <th class="text-uppercase small py-3" style="letter-spacing: 1px;">Nom</th>
                    <th class="text-uppercase small py-3" style="letter-spacing: 1px;">Slug</th>
                    <th class="text-uppercase small py-3 text-end" style="letter-spacing: 1px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td class="fw-bold">{{ category.name }}</td>
                    <td class="text-muted fst-italic">{{ category.slug }}</td>
                    <td class="text-end">
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-link text-dark"><i class="bi bi-eye"></i></a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-link text-dark"><i class="bi bi-pencil"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center py-5 text-muted">Aucune catégorie trouvée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_admin') }}" class="text-dark text-uppercase fw-bold text-decoration-none border-bottom border-dark pb-1" style="letter-spacing: 1px; font-size: 0.8rem;">Retour au tableau de bord</a>
    </div>
</div>
{% endblock %}
