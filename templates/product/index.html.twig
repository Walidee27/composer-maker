{% extends 'base.html.twig' %}

{% block title %}Produits - Admin{% endblock %}

{% block body %}
<div class="container mt-5 pt-5 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-6 mb-0">LISTE DES PRODUITS</h1>
        <a href="{{ path('app_product_new') }}" class="btn btn-dark">NOUVEAU PRODUIT</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th class="text-uppercase small py-3" style="letter-spacing: 1px;">Image</th>
                    <th class="text-uppercase small py-3" style="letter-spacing: 1px;">Nom</th>
                    <th class="text-uppercase small py-3" style="letter-spacing: 1px;">Prix</th>
                    <th class="text-uppercase small py-3" style="letter-spacing: 1px;">Stock</th>
                    <th class="text-uppercase small py-3 text-end" style="letter-spacing: 1px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td style="width: 100px;">
                        {% if product.image %}
                            <img src="{{ product.image }}" alt="{{ product.name }}" class="img-fluid" style="width: 60px; height: 80px; object-fit: cover;">
                        {% else %}
                            <div class="bg-light d-flex align-items-center justify-content-center text-muted small" style="width: 60px; height: 80px;">N/A</div>
                        {% endif %}
                    </td>
                    <td class="fw-bold">{{ product.name }}</td>
                    <td>{{ product.price }} €</td>
                    <td>
                        <span class="badge {{ product.stock > 0 ? 'bg-dark' : 'bg-secondary' }} rounded-0 fw-normal">
                            {{ product.stock }}
                        </span>
                    </td>
                    <td class="text-end">
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-link text-dark"><i class="bi bi-eye"></i></a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-link text-dark"><i class="bi bi-pencil"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center py-5 text-muted">Aucun produit trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
    <div class="mt-4">
        <a href="{{ path('app_admin') }}" class="text-dark text-uppercase fw-bold text-decoration-none border-bottom border-dark pb-1" style="letter-spacing: 1px; font-size: 0.8rem;">Retour au tableau de bord</a>
    </div>
</div>
{% endblock %}
