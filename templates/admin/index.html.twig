{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Tableau de Bord Administration</h1>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Produits</h5>
                    <p class="card-text">Gérer le catalogue des produits.</p>
                    <a href="{{ path('app_product_index') }}" class="btn btn-primary">Gérer les Produits</a>
                    <a href="{{ path('app_product_new') }}" class="btn btn-success">Ajouter un Produit</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Catégories</h5>
                    <p class="card-text">Gérer les catégories de vêtements.</p>
                    <a href="{{ path('app_category_index') }}" class="btn btn-primary">Gérer les Catégories</a>
                    <a href="{{ path('app_category_new') }}" class="btn btn-success">Ajouter une Catégorie</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Retour au site</a>
    </div>
</div>
{% endblock %}
