{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container mt-5 pt-5 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="display-5 mb-0">ADMINISTRATION</h1>
        <a href="{{ path('app_home') }}" class="text-dark text-uppercase fw-bold text-decoration-none border-bottom border-dark pb-1" style="letter-spacing: 1px; font-size: 0.8rem;">Retour au site</a>
    </div>
    
    <div class="row g-4">
        <div class="col-md-6">
            <div class="p-5 border bg-light h-100 text-center">
                <h2 class="h4 mb-3">PRODUITS</h2>
                <p class="text-muted mb-4">Gérer le catalogue, les stocks et les prix.</p>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="{{ path('app_product_index') }}" class="btn btn-dark">GÉRER</a>
                    <a href="{{ path('app_product_new') }}" class="btn btn-outline-dark">AJOUTER</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="p-5 border bg-light h-100 text-center">
                <h2 class="h4 mb-3">CATÉGORIES</h2>
                <p class="text-muted mb-4">Organiser les collections et rayons.</p>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="{{ path('app_category_index') }}" class="btn btn-dark">GÉRER</a>
                    <a href="{{ path('app_category_new') }}" class="btn btn-outline-dark">AJOUTER</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
