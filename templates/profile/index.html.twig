{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">Mon Profil</h2>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="mb-3">
                        <strong>Email :</strong> {{ user.email }}
                    </div>
                    <div class="mb-3">
                        <strong>Nom :</strong> {{ user.lastName }}
                    </div>
                    <div class="mb-3">
                        <strong>Prénom :</strong> {{ user.firstName }}
                    </div>
                    <div class="mb-3">
                        <strong>Adresse :</strong> {{ user.address }}
                    </div>
                    <div class="mb-3">
                        <strong>Ville :</strong> {{ user.city }} ({{ user.zipCode }})
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">Modifier mes informations</a>
                        
                        {% if not is_granted('ROLE_ADMIN') %}
                            <form method="post" action="{{ path('app_profile_delete') }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-danger">Supprimer mon compte</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
