{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="text-center h3 mb-5 text-uppercase" style="letter-spacing: 2px;">MON COMPTE</h1>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger rounded-0 border-0 bg-danger bg-opacity-10 text-danger small mb-4">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="mb-5">
                <h2 class="h6 text-uppercase text-muted mb-4 border-bottom pb-2">Mes Informations</h2>
                
                <div class="row mb-3">
                    <div class="col-4 text-muted small text-uppercase">Email</div>
                    <div class="col-8">{{ user.email }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 text-muted small text-uppercase">Nom</div>
                    <div class="col-8">{{ user.lastName }} {{ user.firstName }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-4 text-muted small text-uppercase">Adresse</div>
                    <div class="col-8">
                        {{ user.address }}<br>
                        {{ user.zipCode }} {{ user.city }}
                    </div>
                </div>
            </div>

            <div class="mb-5">
                <h2 class="h6 text-uppercase text-muted mb-4 border-bottom pb-2">Mes Commandes</h2>
                
                {% if user.orders is empty %}
                    <p class="text-muted small">Vous n'avez pas encore passé de commande.</p>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr class="small text-uppercase text-muted">
                                    <th class="fw-normal border-0">N°</th>
                                    <th class="fw-normal border-0">Date</th>
                                    <th class="fw-normal border-0">Statut</th>
                                    <th class="fw-normal border-0 text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in user.orders %}
                                    <tr>
                                        <td class="border-light">#{{ order.id }}</td>
                                        <td class="border-light">{{ order.createdAt|date('d/m/Y') }}</td>
                                        <td class="border-light">
                                            <span class="badge rounded-0 fw-normal text-uppercase px-2 py-1 
                                                {% if order.status == 'PAID' %}bg-success bg-opacity-10 text-success
                                                {% elseif order.status == 'PENDING' %}bg-warning bg-opacity-10 text-warning
                                                {% else %}bg-secondary bg-opacity-10 text-secondary{% endif %}">
                                                {{ order.status }}
                                            </span>
                                        </td>
                                        <td class="border-light text-end">{{ order.total|number_format(2, ',', ' ') }} €</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>

            <div class="d-grid gap-3">
                <a href="{{ path('app_profile_edit') }}" class="btn btn-dark">MODIFIER MES INFORMATIONS</a>
                
                {% if not is_granted('ROLE_ADMIN') %}
                    <form method="post" action="{{ path('app_profile_delete') }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');" class="d-grid">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-outline-danger border-0 text-uppercase small" style="letter-spacing: 1px;">Supprimer mon compte</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
